<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.site11.jugomo.modernart.MainActivity"
    tools:showIn="@layout/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="440dp"
                android:orientation="vertical"
                android:id="@+id/left"
                android:layout_weight="0.5">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:background="#548bc5"
                        android:id="@+id/panel1"
                        android:layout_weight="0.5" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/panel2"
                        android:background="#bc0606"
                        android:layout_weight="0.5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="440dp"
                android:orientation="vertical"
                android:id="@+id/right"
                android:layout_weight="0.5">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="#5dc97f"
                        android:id="@+id/panel3"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/panel4"
                        android:background="#e4e132" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/panel5"
                        android:background="#c333d3" />
            </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="100dp"
        android:background="#646464"
        android:id="@+id/panel6"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#000000"
        android:layout_below="@+id/left" />
</RelativeLayout>
